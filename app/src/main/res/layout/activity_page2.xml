<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.smokydesperado.myapplication.page2"
    android:id="@+id/theID">

    <TextView android:text="Your favorite scripture is:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scripConfirm"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes, yes it is!!!"
        android:id="@+id/confirm"
        android:layout_above="@+id/deny"
        android:layout_alignRight="@+id/deny"
        android:layout_alignEnd="@+id/deny"
        android:layout_alignLeft="@+id/deny"
        android:layout_alignStart="@+id/deny" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No, I need to see an adult D:"
        android:id="@+id/deny"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scripture"
        android:layout_marginTop="25dp"
        android:text="Book"
        android:layout_below="@+id/scripConfirm"
        android:layout_toLeftOf="@+id/chapter"
        android:layout_toStartOf="@+id/chapter"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapter"
        android:text="Chapter"
        android:layout_alignTop="@+id/scripture"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verse"
        android:text="Verse"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/chapter"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
